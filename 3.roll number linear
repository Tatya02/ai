#include <iostream>
using namespace std;

// Function to perform linear search
int linearSearch(int arr[], int n, int key) {
    for (int i = 0; i < n; i++) {
        if (arr[i] == key)
            return i;  // Return index if found
    }
    return -1;  // Return -1 if not found
}

int main() {
    int n, key, pos;

    cout << "Enter number of students who attended the training program: ";
    cin >> n;

    int roll[n];
    cout << "Enter roll numbers of students:\n";
    for (int i = 0; i < n; i++) {
        cin >> roll[i];
    }

    cout << "Enter roll number to search: ";
    cin >> key;

    pos = linearSearch(roll, n, key);

    if (pos == -1)
        cout << "Student with roll number " << key << " did NOT attend the training program.\n";
    else
        cout << "Student with roll number " << key << " attended the training program (found at position " << pos + 1 << ").\n";

    return 0;
}
