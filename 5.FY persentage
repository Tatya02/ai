#include <iostream>
using namespace std;

// Function to perform selection sort
void selectionSort(float arr[], int n) {
    int i, j, minIndex;
    float temp;

    for (i = 0; i < n - 1; i++) {
        minIndex = i;
        for (j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex])
                minIndex = j;
        }

        // Swap smallest element with the first unsorted element
        temp = arr[i];
        arr[i] = arr[minIndex];
        arr[minIndex] = temp;
    }
}

int main() {
    int n;

    cout << "Enter number of students: ";
    cin >> n;

    float percent[n];
    cout << "Enter percentage of each student:\n";
    for (int i = 0; i < n; i++) {
        cin >> percent[i];
    }

    // Sort array using Selection Sort
    selectionSort(percent, n);

    // Display sorted percentages
    cout << "\nPercentages in ascending order:\n";
    for (int i = 0; i < n; i++) {
        cout << percent[i] << " ";
    }

    // Display top five scores
    cout << "\n\nTop five scores:\n";
    int count = (n < 5) ? n : 5; // Handle if less than 5 students
    for (int i = n - 1; i >= n - count; i--) {
        cout << percent[i] << " ";
    }

    cout << endl;
    return 0;
}
